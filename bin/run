#!/usr/bin/env bash
set -eo pipefail

# default variables
: "${PORT:=8000}"
: "${SLEEP:=1}"
: "${TRIES:=60}"

usage() {
  echo "usage: bin/run dev"
  exit 1
}

wait_for() {
  tries=0
  echo "Waiting for $1 to listen on $2..."
  until nc -z $1 $2; do
    [[ $tries -lt $TRIES ]] || return
    [[ $? -eq 0 ]] && return
    sleep $SLEEP
    tries=$((tries + 1))
  done
}

[ $# -lt 1 ] && usage

wait_for db 5432

tests() {
  mkdir -p /app/.coverage
  python manage.py check
  python -m pytest "$@"  # skips linter checks
}

integration-tests() {
  mkdir -p /app/.coverage
  wait_for server 8000
  python -m pytest integration-tests --driver Chrome
}

case $1 in
  dev)
    python manage.py migrate --noinput
    exec python manage.py runserver 0.0.0.0:${PORT}
    ;;
  worker)
    exec python manage.py spinach
    ;;
  tests)
    shift
    tests
    ;;
  integration-tests)
    shift
    integration-tests
    ;;
  ci)
    shift
    tests "--lean" "$@"
    ;;
  noop)
    shift
    ;;
  *)
    exec "$@"
    ;;
esac
